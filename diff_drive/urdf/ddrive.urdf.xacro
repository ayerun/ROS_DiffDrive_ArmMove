<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="cybercaster">

    <xacro:include filename="$(find diff_drive)/urdf/ddrive.gazebo.xacro"/>

    <!-- Load from yaml file -->
    <xacro:property name='dimyaml' value='$(find diff_drive)/config/dims.yaml'/>
    <xacro:property name='dims' value='${load_yaml(dimyaml)}'/>
    <!-- rectange length width height -->
    <xacro:property name='L' value='${dims["L"]}'/>
    <xacro:property name='W' value='${dims["W"]}'/>
    <xacro:property name='H' value='${dims["H"]}'/>
    <!-- wheel radius and length -->
    <xacro:property name='R' value='${H}'/>
    <xacro:property name='WL' value='${W/5}'/>
    <!-- masses -->
    <xacro:property name='MR' value='0.5'/>
    <xacro:property name='MW' value='0.1'/>

    <link name='base_footprint' type='fixed'/>

    <joint name='base_joint' type='fixed'>
        <parent link='base_footprint'/>
        <child link='base_link'/>
        <origin xyz='0 0 0' rpy='0 0 0'/>
    </joint>

    <link name='base_link'>
        <visual>
            <origin xyz='0 0 0'/>
            <geometry>
                <box size='${L} ${W} ${H}'/>
            </geometry>
            <material name='cyan_mat'>
                <color rgba='0 1 1 1' />
            </material>
        </visual>

        <collision>
            <origin xyz='0 0 ${H/2}'/>
            <geometry>
                <box size='${L} ${W} ${H}'/>
            </geometry>
        </collision>

        <inertial>
            <origin xyz='0 0 ${H/2}'/>
            <mass value='${MR}'/>
            <inertia ixx="${MR*(H**2+W**2)/12}" ixy="0" ixz="0"
               iyy="${MR*(H**2+L**2)/12}" iyz="0"
               izz="${MR*(L**2+W**2)/12}" />
        </inertial>
    </link>

    <joint name="left_wheel" type='continuous'>
        <parent link="base_link"/>
        <child link="left_wheel_link"/>
        <origin xyz="${L/4} ${-W/2-WL/2} 0" rpy='${-pi/2} 0 0'/>
        <axis xyz="0 0 1"/>
    </joint>

    <link name="left_wheel_link">
        <visual>
            <geometry>
                <cylinder radius='${R}' length='${WL}'/>
            </geometry>
            <material name="pink_mat">
                <color rgba='1 0 1 1'/>
            </material>
        </visual>

        <collision>
            <geometry>
                <cylinder radius='${R}' length='${WL}'/>
            </geometry>
        </collision>

        <inertial>
            <mass value="${MW}" />
            <inertia ixx="${(1/12)*MW*(3*R**2+WL**2)}" ixy="0" ixz="0"
                iyy="${(1/12)*MW*(3*R**2+WL**2)}" iyz="0"
                izz="${0.5*MW*R**2}" />
        </inertial>
    </link>

    <joint name="right_wheel" type='continuous'>
        <parent link="base_link"/>
        <child link="right_wheel_link"/>
        <origin xyz="${L/4} ${W/2+WL/2} 0" rpy='${-pi/2} 0 0'/>
        <axis xyz="0 0 1"/>
    </joint>

    <link name="right_wheel_link">
        <visual>
            <geometry>
                <cylinder radius='${R}' length='${WL}'/>
            </geometry>
            <material name="pink_mat">
                <color rgba='1 0 1 1'/>
            </material>
        </visual>

        <collision>
            <geometry>
                <cylinder radius='${R}' length='${WL}'/>
            </geometry>
        </collision>

        <inertial>
            <mass value="0.1" />
            <inertia ixx="${(1/12)*MW*(3*R**2+WL**2)}" ixy="0" ixz="0"
                iyy="${(1/12)*MW*(3*R**2+WL**2)}" iyz="0"
                izz="${0.5*MW*R**2}" />
        </inertial>
    </link>

    <joint name="caster_bottom_joint" type="fixed">
        <parent link="base_link"/>
        <child link="caster_bottom_link"/>
        <origin xyz="${-3*L/8} 0 ${-H/2}" rpy="${-pi/2} 0 0"/>
    </joint>

    <link name="caster_bottom_link">
        <visual>
            <geometry>
                <sphere radius='${R-(H/2)}'/>
            </geometry>
            <material name="yellow_mat">
                <color rgba='1 1 0 1'/>
            </material>
        </visual>

        <collision>
            <geometry>
                <sphere radius='${R-(H/2)}'/>
            </geometry>
        </collision>

        <inertial>
            <mass value="${MW}" />
            <inertia ixx="${(2/5)*MW*(R-(H/2))**2}" ixy="0.0" ixz="0.0"
                iyy="${(2/5)*MW*(R-(H/2))**2}" iyz="0.0"
                izz="${(2/5)*MW*(R-(H/2))**2}" />
        </inertial>
    </link>

    <joint name="caster_top_joint" type="fixed">
        <parent link="base_link"/>
        <child link="caster_top_link"/>
        <origin xyz="${-3*L/8} 0 ${H/2}" rpy="${-pi/2} 0 0"/>
    </joint>

    <link name="caster_top_link">
        <visual>
            <geometry>
                <sphere radius='${R-(H/2)}'/>
            </geometry>
            <material name="yellow_mat">
                <color rgba='1 1 0 1'/>
            </material>
        </visual>

        <collision>
            <geometry>
                <sphere radius='${R-(H/2)}'/>
            </geometry>
        </collision>

        <inertial>
            <mass value="${MW}" />
            <inertia ixx="${(2/5)*MW*(R-(H/2))**2}" ixy="0.0" ixz="0.0"
                iyy="${(2/5)*MW*(R-(H/2))**2}" iyz="0.0"
                izz="${(2/5)*MW*(R-(H/2))**2}" />
        </inertial>
    </link>

</robot>